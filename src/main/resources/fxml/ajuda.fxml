<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AjudaController" style="-fx-background-color: #F0F2F5;">
    <children>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="15.0" styleClass="content-card" prefWidth="500">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="section-title" text="Central de Ajuda" />

                <Label text="Está com dificuldades? Encontrou um bug? Escreva abaixo e nossa equipe irá analisar!" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #555;" />

                <TextArea fx:id="txtAjuda" prefHeight="150.0" promptText="Descreva sua necessidade ou problema aqui..." wrapText="true" style="-fx-font-size: 14px;" />

                <Button mnemonicParsing="false" onAction="#enviarAjuda" styleClass="menu-button" text="Enviar Solicitação" maxWidth="200" style="-fx-alignment: CENTER;" />
            </children>
        </VBox>
    </children>
</StackPane>