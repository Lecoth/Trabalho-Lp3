<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminBuildGuiaController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <VBox maxWidth="600.0" spacing="10.0">
                    <children>
                        <Label text="Cadastrar Nova Build Guia">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <Label text="Personagem:" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboPersonagem" prefWidth="600.0" promptText="Selecione um Personagem..." />

                        <Label text="Arma Ideal:" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboArma" prefWidth="600.0" promptText="Selecione uma Arma..." />

                        <Label text="Justificativa da Arma:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="txtPqArmaIdeal" promptText="Descreva por que esta arma é boa para esta build..." wrapText="true" />

                        <Label text="Set de Artefatos Ideal:" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboArtefato" prefWidth="600.0" promptText="Selecione um Set de Artefatos..." />

                        <Label text="Main Stats Prioritários" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2A4B7C;" />

                        <Label text="Areia (Sands):" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtMainSands" promptText="Ex: Recarga de Energia% ou ATK%" />

                        <Label text="Cálice (Goblet):" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtMainGoblet" promptText="Ex: Bônus Pyro%" />

                        <Label text="Tiara (Circlet):" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtMainCirclet" promptText="Ex: Taxa Crítica%" />

                        <Label text="Substats Prioritários:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="txtSubstats" promptText="Ex: Taxa Crítica > Dano Crítico > ATK% > Recarga" wrapText="true" />

                        <Label text="Status Ideais (Goals):" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="txtIdealStatus" promptText="Ex: 220% Recarga, 50% Taxa, 150% Dano" wrapText="true" />

                        <Label fx:id="lblMensagem" style="-fx-font-weight: bold;" />
                        <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#salvarBuildGuia" styleClass="menu-button" text="Salvar Build Guia" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
