<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminPersonagemController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <VBox maxWidth="600.0" spacing="10.0">
                    <children>
                        <Label text="Cadastrar Novo Personagem">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <Label text="Nome:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtNome" promptText="Ex: Bennett" />

                        <Label text="Elemento:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtElemento" promptText="Ex: Pyro" />

                        <Label text="Tipo da Arma:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtTipoArma" promptText="Ex: Espada" />

                        <Label text="Estrelas (4 ou 5):" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtEstrelas" promptText="Ex: 4" />

                        <Label text="Caminho da Imagem:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtImagem" promptText="Ex: images/personagens/bennett.png" />

                        <Label text="Talentos (Descrição):" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="txtTalentos" promptText="Descrição dos talentos..." wrapText="true" />

                        <Label fx:id="lblMensagem" style="-fx-font-weight: bold;" />

                        <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#salvarPersonagem" styleClass="menu-button" text="Salvar Personagem" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
