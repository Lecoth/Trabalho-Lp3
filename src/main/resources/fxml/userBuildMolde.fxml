<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserBuildCardController">
    <children>
        <AnchorPane id="card" layoutX="14.0" layoutY="14.0" prefHeight="422.0" prefWidth="572.0" style="-fx-border-color: #AAAAAA; -fx-border-radius: 5; -fx-background-color: #FAFAFA;">
            <children>
                <Label fx:id="lblNomeBuild" layoutX="220.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Título da Build do Usuário" />

                <ImageView fx:id="imgPersonagem" fitHeight="309.0" fitWidth="190.0" layoutX="20.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="lblNomePersonagem" layoutX="220.0" layoutY="60.0" style="-fx-font-size: 16px;" text="Nome Personagem" />
                <Label fx:id="lblElemento" layoutX="380.0" layoutY="62.0" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Elemento" />

                <ImageView fx:id="imgArma" fitHeight="40.0" fitWidth="40.0" layoutX="220.0" layoutY="95.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="lblNomeArma" layoutX="264.0" layoutY="104.0" style="-fx-font-size: 16px;" text="Nome Arma" />
                <ImageView fx:id="imgArtefato" fitHeight="40.0" fitWidth="40.0" layoutX="220.0" layoutY="145.0" pickOnBounds="true" preserveRatio="true" />
                <Label fx:id="lblNomeArtefato" layoutX="264.0" layoutY="154.0" style="-fx-font-size: 16px;" text="Nome Artefato" />

                <Label layoutX="220.0" layoutY="200.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2A4B7C;" text="Main Stats Escolhidos:" />

                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="215.0" layoutY="240.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../images/artefatos/sands.png" /></image>
                </ImageView>
                <Text fx:id="txtSand" layoutX="260.0" layoutY="260.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px;" text="Sands Stat" />

                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="215.0" layoutY="280.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../images/artefatos/goblet.png" /></image>
                </ImageView>
                <Text fx:id="txtGoblet" layoutX="257.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px;" text="Goblet Stat" />

                <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="215.0" layoutY="320.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../images/artefatos/circlet.png" /></image>
                </ImageView>
                <Text fx:id="txtCirclet" layoutX="259.0" layoutY="340.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 14px;" text="Circlet Stat" />

                <TextArea fx:id="txtDescricao" editable="false" layoutX="210.0" layoutY="359.0" prefHeight="45.0" prefWidth="359.0" wrapText="true" style="-fx-background-color: transparent; -fx-control-inner-background: #FAFAFA;" />
                <Label fx:id="lblStatusPrivacidade" layoutX="20.0" layoutY="390.0" style="-fx-font-weight: bold; -fx-text-fill: #990000;" text="PRIVADA" visible="false" />

                <Label fx:id="lblAutor" layoutX="402.0" layoutY="402.0" prefHeight="18.0" prefWidth="134.0" style="-fx-font-style: italic; -fx-text-fill: #555;" text="Criado por: Usuário" visible="false" />
                <HBox fx:id="botoesHBox" layoutX="7.0" layoutY="379.0" spacing="10.0">
                    <children>
                        <Button fx:id="btnEditar" maxWidth="92.0" mnemonicParsing="false" onAction="#editarBuild" prefHeight="40.0" prefWidth="90.0" styleClass="menu-button" stylesheets="@../css/estilo.css" text="Editar" />
                        <Button fx:id="btnDeletar" maxWidth="95.0" mnemonicParsing="false" onAction="#deletarBuild" prefHeight="40.0" prefWidth="93.0" styleClass="menu-button" stylesheets="@../css/estilo.css" text="Deletar" textFill="RED" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
