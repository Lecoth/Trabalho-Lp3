<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ListView?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PerfilController">
    <children>
        <VBox layoutX="50.0" layoutY="50.0" spacing="10.0">
            <children>
                <Label text="Dados do Perfil:">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Label text="Nome de Usuário:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lblNomeUsuario" style="-fx-font-size: 14px;" text="Carregando...">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>

                <Label text="Email Cadastrado:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="lblEmailUsuario" style="-fx-font-size: 14px;" text="Carregando...">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
                <Label text="Minhas Builds Criadas:">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>

                <ListView fx:id="listBuilds" prefHeight="200.0" prefWidth="500.0" style="-fx-background-color: transparent; -fx-border-color: #AAAAAA;" />

                <Label fx:id="lblSemBuilds" text="Você ainda não criou nenhuma build. Faça uma agora!" textFill="#777777" visible="false" managed="false">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
