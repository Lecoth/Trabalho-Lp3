<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CriarBuildController">
    <content>
        <VBox alignment="TOP_CENTER" spacing="15.0">
            <children>
                <VBox maxWidth="600.0" spacing="10.0">
                    <children>
                        <Label text="Criar Nova Build de Usuário">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Título da Build (Ex: 'Bennett DPS', 'Barbara Healer')" style="-fx-font-weight: bold;" />
                        <TextField fx:id="txtNomeBuild" promptText="Digite o título da sua build..." />

                        <Label text="Personagem" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboPersonagem" prefWidth="600.0" promptText="Selecione um Personagem..." />

                        <Label text="Arma" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboArma" prefWidth="600.0" promptText="Selecione uma Arma..." />

                        <Label text="Conjunto de Artefatos" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboArtefato" prefWidth="600.0" promptText="Selecione um Set de Artefatos..." />

                        <Label text="Main Stats" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2A4B7C;">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>

                        <Label text="Areia (Sands)" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboSands" prefWidth="600.0" promptText="Selecione o Main Stat..." />

                        <Label text="Cálice (Goblet)" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboGoblet" prefWidth="600.0" promptText="Selecione o Main Stat..." />

                        <Label text="Tiara (Circlet)" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="comboCirclet" prefWidth="600.0" promptText="Selecione o Main Stat..." />

                        <CheckBox fx:id="checkPrivada" mnemonicParsing="false" text="Manter esta build privada (só eu posso ver)">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </CheckBox>

                        <Label fx:id="lblMensagem" style="-fx-font-weight: bold;" />
                        <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#salvarBuild" styleClass="menu-button" text="Salvar Build" />
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>
