<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@../css/estilo.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MyBuildsController">
    <children>
        <ScrollPane fitToWidth="true" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="vboxConteudo" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Você ainda não criou nenhuma build.">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label text="Clique no botão abaixo para começar!" />
                        <Button maxWidth="140.0" mnemonicParsing="false" onAction="#abrirFormularioCriarBuild" prefHeight="40.0" prefWidth="176.0" styleClass="menu-button" text="Criar Nova Build">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
