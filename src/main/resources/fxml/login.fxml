<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefWidth="400" prefHeight="300">
    <children>
        <Label text="Login" layoutX="180" layoutY="30" styleClass="titulo"/>
        <Label text="Email:" layoutX="80" layoutY="90"/>
        <TextField fx:id="txtEmail" layoutX="140" layoutY="85" prefWidth="180"/>
        <Label text="Senha:" layoutX="80" layoutY="130"/>
        <PasswordField fx:id="txtSenha" layoutX="140" layoutY="125" prefWidth="180"/>
        <Button text="Entrar" layoutX="140" layoutY="170" onAction="#entrar"/>
        <Button text="Cadastrar" layoutX="230" layoutY="170" onAction="#abrirCadastro"/>
        <Label fx:id="lblMensagem" layoutX="120" layoutY="220" textFill="red"/>
    </children>
</AnchorPane>
